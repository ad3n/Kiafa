                                    <li><b>Inbox Facebook</b></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class=" col-sm-12 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                SEMBILAN TRANSAKSI TERAKHIR
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <td class="text-center"><b>#</b></td>
                                            <td class="text-center text-bold amount"><b>Tanggal</b></td>
                                            <td class="text-center text-bold hidden-sm hidden-xs"><b>Transaksi</b></td>
                                            <td class="text-center text-bold amount hidden-sm hidden-xs"><b>Besaran (Rp)</b></td>
                                            <td class="text-center text-bold"><b>Keterangan</b></td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set total = 0 %} 
                                        {% for i, record in detail %}
                                            {% set total = total + record['transaksi'] %}
                                            <tr class="{% if record['tipe'] is same as('d') %}{{- 'success' -}}{% else %}{{- 'danger' -}}{% endif %}">
                                                <td class="text-center">{{- (i + 1)-}}</td>
                                                <td class="text-center">{{- record['tanggal'] | date('d-m-Y') -}}
                                                    {% if record['tipe'] is same as('d')  %}
                                                        <div class="hidden-lg hidden-md divider">Rp. {{ record['transaksi'] | number_format(0, ',', '.') -}},-</div>
                                                    {% else %}
                                                        <div class="hidden-lg hidden-md divider">(Rp. {{ (-1 * record['transaksi']) | number_format(0, ',', '.') -}},-)</div>
                                                    {% endif %}
                                                </td>
                                                {% if record['tipe'] is same as('d')  %}
                                                    <td class="hidden-sm hidden-xs">Debit</td>
                                                    <td class="text-right hidden-sm hidden-xs">Rp. {{ record['transaksi'] | number_format(0, ',', '.') -}},-</td>
                                                {% else %}
                                                    <td class="hidden-sm hidden-xs">Kredit</td>
                                                    <td class="text-right hidden-sm hidden-xs">(Rp. {{ (-1 * record['transaksi']) | number_format(0, ',', '.') -}},-)</td>
                                                {% endif %}
                                                <td>
                                                    {% set keterangan = record['keterangan'] %}
                                                    {% if record['keterangan'] is same as(null) and record['tipe'] is same as('d') %}
                                                        {% set keterangan = 'Untuk santunan anak yatim dan duafa' %}
                                                    {% endif %}

                                                    {% if record['tipe'] is same as('d') %}
                                                        {% if record['hamba'] is same as(true) %}
                                                            Donasi dari: Hamba Allah<br/>
                                                        {% else %}
                                                            Donasi dari: {{ record['donatur'] }}<br/>
                                                        {% endif %}
                                                    {% else %}
                                                        Rekening keluar: {{ record['rekening'] }}<br/>
                                                    {% endif %}
                                                    {{- keterangan -}}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                            <tr class="hidden-sm hidden-xs">
                                                <td colspan="2"><b>Total</b></td>
                                                <td colspan="3" class="text-right"><b>
                                                    {% if total > 0 %}
                                                        Rp. {{ total | number_format(0, ',', '.') -}},-
                                                    {% else %}
                                                        (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                    {% endif %}
                                                </b></td>
                                            </tr>
                                            <tr class="hidden-md hidden-lg">
                                                <td colspan="2"><b>Total</b></td>
                                                <td class="text-right"><b>
                                                    {% if total > 0 %}
                                                        Rp. {{ total | number_format(0, ',', '.') -}},-
                                                    {% else %}
                                                        (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                    {% endif %}
                                                </b></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" col-sm-12 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                LAPORAN MINGGUAN BULAN BERJALAN ({{ "now" | date("m") | bulan_to_text }} {{ "now" | date("Y") }})
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <td class="text-center"><b>Minggu</b></td>
                                            <td class="text-center"><b>Debet (Rp)</b></td>
                                            <td class="text-center"><b>Kredit (Rp)</b></td>
                                            <td class="text-center hidden-sm hidden-xs"><b>Saldo (Rp)</b></td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set total_d = 0 %}
                                        {% set total_k = 0 %}
                                        {% for i, record in mingguan %}
                                            {% set total_d = total_d + record['total_d'] %}
                                            {% set total_k = total_k - record['total_k'] %}
                                            <tr>
                                                <td class="text-center">{{- i + 1 -}}</td>
                                                <td class="text-right">
                                                    {% if record['total_d'] > 0 %}
                                                        Rp. {{ record['total_d'] | number_format(0, ',', '.') -}},-
                                                    {% else %}-{% endif %}
                                                </td>
                                                <td class="text-right">
                                                    {% if record['total_k'] < 0 %}
                                                        Rp. {{ (-1 * record['total_k']) | number_format(0, ',', '.') -}},-
                                                    {% else %}-{% endif %}
                                                </td>
                                                <td class="text-right hidden-sm hidden-xs"><b>
                                                    {% set saldo = record['total_d'] + record['total_k'] %}
                                                    {% if saldo > 0 %}
                                                        Rp. {{ saldo | number_format(0, ',', '.') -}},-
                                                    {% else %}
                                                        (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                    {% endif %}</b>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        <tr>
                                            <td><b>Total</b></td>
                                            <td class="text-right hidden-sm hidden-xs"><b>
                                                {% if total_d > 0 %}
                                                    Rp. {{- total_d | number_format(0, ',', '.') -}},-
                                                {% else %}-{% endif %}</b>
                                            </td>
                                            <td class="text-right hidden-sm hidden-xs"><b>
                                                {% if total_k > 0 %}
                                                    Rp. {{- total_k | number_format(0, ',', '.') -}},-
                                                {% else %}-{% endif %}</b>
                                            </td>
                                            {% set saldo = total_d - total_k %}
                                            <td class="text-right hidden-sm hidden-xs"><b>
                                                {% if saldo > 0 %}
                                                    Rp. {{ saldo | number_format(0, ',', '.') -}},-
                                                {% else %}
                                                    (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                {% endif %}</b>
                                            </td>
                                            {# Total untuk mobile #}
                                            <td colspan="2" class="text-right hidden-md hidden-lg"><b>
                                                {% if saldo > 0 %}
                                                    Rp. {{ saldo | number_format(0, ',', '.') -}},-
                                                {% else %}
                                                    (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                {% endif %}</b>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" col-sm-12 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                LAPORAN BULANAN TAHUN BERJALAN ({{ "now" | date("Y") }})
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <td class="text-center"><b>Bulan</b></td>
                                            <td class="text-center"><b>Debet (Rp)</b></td>
                                            <td class="text-center"><b>Kredit (Rp)</b></td>
                                            <td class="text-center hidden-sm hidden-xs"><b>Saldo (Rp)</b></td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set total_d = 0 %}
                                        {% set total_k = 0 %}
                                        {% for i, record in bulanan %}
                                            {% set total_d = total_d + record['total_d'] %}
                                            {% set total_k = total_k - record['total_k'] %}
                                            <tr>
                                                <td class="text-center">{{- record['bulan'] | bulan_to_text -}}</td>
                                                <td class="text-right">
                                                    {% if record['total_d'] > 0 %}
                                                        Rp. {{ record['total_d'] | number_format(0, ',', '.') -}},-
                                                    {% else %}-{% endif %}
                                                </td>
                                                <td class="text-right">
                                                    {% if record['total_k'] < 0 %}
                                                        Rp. {{ (-1 * record['total_k']) | number_format(0, ',', '.') -}},-
                                                    {% else %}-{% endif %}
                                                </td>
                                                <td class="text-right hidden-sm hidden-xs"><b>
                                                    {% set saldo = record['total_d'] + record['total_k'] %}
                                                    {% if saldo > 0 %}
                                                        Rp. {{ saldo | number_format(0, ',', '.') -}},-
                                                    {% else %}
                                                        (Rp. {{ (-1 * saldo) | number_format(0, ',', '.') -}},-)
                                                    {% endif %}
                                                </b></td>
                                            </tr>
                                        {% endfor %}
                                        <tr>
                                            <td><b>Total</b></td>
                                            <td class="text-right hidden-sm hidden-xs"><b>Rp. {{ total_d | number_format(0, ',', '.') -}},-</b></td>
                                            <td class="text-right hidden-sm hidden-xs"><b>Rp. {{ total_k | number_format(0, ',', '.') -}},-</b></td>
                                            <td class="text-right hidden-sm hidden-xs"><b>Rp. {{ (total_d - total_k) | number_format(0, ',', '.') -}},-</b></td>
                                            {# Total untuk mobile #}
                                            <td colspan="2" class="text-right hidden-md hidden-lg"><b>Rp. {{ (total_d - total_k) | number_format(0, ',', '.') -}},-</b></td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <!-- /. PAGE INNER  -->
        </div>
